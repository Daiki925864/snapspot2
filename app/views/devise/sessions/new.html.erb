  <body class="text-center">
    
<main class="form-signin">
  <h2 class="page-heading">Login</h2>
  <%= form_with model: @user, url: user_session_path, local: true do |form| %>
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
      <%= form.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
      <%= form.label :email, "Email address", class: "form-label", for: "floatingInput" %>
    </div>
    <div class="form-floating">
      <%= form.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password" %>
      <%= form.label :password, "Password", class: "form-label", for: "floatingPassword" %>
    </div>

    <%= form.submit "Sign in", class: "w-100 btn btn-lg btn-primary" %>
  <% end %>
</main>

    
