<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.84.0">
    <title>Signin Template · Bootstrap v5.0</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/sign-in/">


    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

  </head>
  <body class="text-center">
    
<main class="form-signin">
  <h2 class="page-heading">Login</h2>
  <br>

  <%# ログイン時のエラーメッセージ  %>
  <div class='login-flash-message text-danger'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <br>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>

    <div class="form-floating">
      <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email", class: "form-control" %>
      <%= f.label :email, "e-mail", class: "form-label" %>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, id:"user_password", autocomplete: "new-password", class: "form-control" %>
      <%= f.label :password, "Password（minimum 6）", class: "form-label" %>
    </div>
    <br>
    <div class="form-floating">
      <%= f.submit "Login", class: "w-100 btn btn-lg btn-primary" %>
    </div>
  <% end %>
</main>

    
  </body>
</html>
