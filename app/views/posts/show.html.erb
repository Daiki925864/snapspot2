<main class="px-3">

<!-- 投稿メイン -->

  <div class="container text-center">
    <div class="row">
      <div class="col-12 mt-4">
        <%= image_tag @post.image ,class:"img-fluid" %>
      </div>
    </div>
  </div>

    <br>

  <div class="container text-center mb-5">
    <div class="">
      <p class="fs-2 fw-bold mt-4"><%= @post.title %></p>
    </div>

    <br>

    <div class="d-flex justify-content-center">
      <div class>
        <p class="fs-5 fw-bold">撮影日</p>
        <p class="fs-6 fw-light"><%= @post.shooting_date.strftime('%Y/%m/%d') %></p>
      </div>
      <div class="mx-2">　</div>
      <div class>
        <p class="fs-5 fw-bold">投稿者</p>
        <p class="fs-6 fw-light"><%= @post.user.nickname %></p>
      </div>
    </div>
  </div>

  <div class="container d-flex justify-content-center">
    <div class="row w-75">
      <div class="border-top">
        <p class="fs-5  mt-3"><%= @post.content %></p>
      </div>
    </div>
  </div>

  <br>

<!-- Edit/Deleteボタン -->

  <div class="text-center">
    <% if user_signed_in? && current_user.id == @post.user_id %>
      <%= link_to edit_post_path(@post.id),data: {"turbolinks" => false} do %>
        <button type="button" class="btn btn-secondary btn-lg">Edit</button>
      <% end %>
      <%= link_to post_path(@post.id), method: :delete do %>
        <button type="button" class="btn btn-lg btn-danger">Delete</button>
      <% end %>
    <% end %>
  </div>

<!-- /Edit/Deleteボタン -->

<!-- PREV/NEXTボタン -->

  <div class="container d-flex justify-content-between mt-5">
    <div class>
      <% if @post.previous.present? %>
        <%= link_to "<PREV", post_path(@post.previous), class: "btn btn-outline-secondary btn-sm mt-3"%>
      <% end %>
    </div>
    <div class>
      <% if @post.next.present? %>
        <%= link_to "NEXT>", post_path(@post.next), class: "btn btn-outline-secondary btn-sm mt-3"%>
      <% end %>
    </div>
  </div>

<!-- /PREV/NEXTボタン -->

<!-- /投稿メイン -->

<br><br>

<!-- 投稿内容詳細アコーディオン -->

  <div class="container">
    <div class="accordion" id="accordionPanelsStayOpenExample">

      <!-- 撮影場所地図表示 -->
      <div class="accordion-item  text-center">
        <h2 class="accordion-header" id="panelsStayOpen-headingOne">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
            撮影場所
          </button>
        </h2>
        <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
          <div class="accordion-body">
            <% if @post.latitude.present? && @post.longitude.present? %>
              <div id='map'></div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- /撮影場所地図表示 -->

      <!-- コメント表示 -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
            コメント
          </button>
        </h2>
        <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo">
          <div class="accordion-body">

            <div class="container p-3 comments">
              <% if user_signed_in? && current_user.id != @post.user_id %>
                <%= form_with(model: @comment, url: post_comments_path(@post), local: true) do |f| %>
                  <div class="input-group mb-3">
                    <%= f.text_field :comment, id: "comment_content", class: "form-control", placeholder: "Comment" %>
                    <%= f.submit "Submit", class: "btn btn-secondary", id:"button-addon2" %>
                  </div>
                <% end %>
              <% end %>
              <ul class="list-group">
                <% @comments.each do |comment| %>
                  <li class="list-group-item">
                    <div class="container-sm text-left">
                      <div class="fw-bold">
                        <%= comment.user.nickname %>
                      </div>
                      <div class=>
                        <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                      </div>
                      <div class="d-flex justify-content-between">
                        <div>
                          <%= comment.comment %>
                        </div>
                        <div>
                          <% if user_signed_in? && current_user.id == comment.user_id %>
                            <%= link_to post_comment_path(@post, comment), method: :delete do %>
                              <button type="button" class="btn btn-sm btn-danger">Delete</button>
                            <% end %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>

          </div>
        </div>
      </div>
      <!-- /コメント表示 -->


      <div class="accordion-item">
        <h2 class="accordion-header" id="panelsStayOpen-headingThree">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
            作品詳細
          </button>
        </h2>
        <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingThree">
          <div class="accordion-body">
            <strong>This is the third item's accordion body.</strong> It is hidden by default, until the collapse plugin adds the appropriate classes that we use to style each element. These classes control the overall appearance, as well as the showing and hiding via CSS transitions. You can modify any of this with custom CSS or overriding our default variables. It's also worth noting that just about any HTML can go within the <code>.accordion-body</code>, though the transition does limit overflow.
          </div>
        </div>
      </div>

    </div>
  </div>

<!-- /投稿内容詳細アコーディオン -->

  <br>

