<%= form_with model: @post, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, class:"mb-3", id:"prototype_title" %>
  </div>

  <div class="field">
    <%= f.label :content, "投稿の説明" %><br />
    <%= f.text_area :content, class:"mb-3", id:"prototype_catch_copy" %>
  </div>

  <div class="d-flex justify-content-center mb-3">
    <%= f.label :shooting_date, "撮影日　" %><br />
    <%= raw sprintf(
      f.date_select(
          :shooting_date,
          class:'select-birth',
          id:"birth-date",
          use_month_numbers: true,
          prompt:'--',
          start_year: 2000,
          end_year: (Time.now.year),
          date_separator: '%s'),
          "<p> 　年　 </p>", "<p> 　月　 </p>") + "<p> 　日　 </p>" %>
  </div>


  <div class="field">
    <%= f.label :image, "投稿する画像" %><br />
    <%= f.file_field :image, class: "form-control-file mb-3", id:"exampleFormControlFile1" %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>