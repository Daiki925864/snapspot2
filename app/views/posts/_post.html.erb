<div class="album py-5 bg-light">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @posts.each do |post| %>
        <div class="col">
          <div class="card shadow-sm">
            <div class="img-case">
            <div class="img-fluid">
              <%= link_to post_path(post.id) do %>
                <%= image_tag post.image, class: "bd-placeholder-img card-img-top cropped-image" %>
              <% end %>
            </div>
            </div>

            <div class="card-body">
              <h4 class="card-title"><%= post.title %></h4>
              <p class="card-text"><%= post.content %></p>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <div class="text-muted">
                  <% if post.impressions_count >= 2 %>
                    <%= post.impressions_count %> views
                  <% else %>
                    <%= post.impressions_count %> view
                  <% end %>
                </div>
                <div class="text-muted">
                  <span>
                    投稿日 <%= post.created_at.strftime('%Y/%m/%d') %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
.img-case {
  width: 100%;
  height: 0;
  padding: 28.125% 0; /* 16:9のアスペクト比 */
  position: relative;
  overflow: hidden;
}

.img-case .img-fluid {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

</style>